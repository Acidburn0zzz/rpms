DEVICE=wlan0
ONBOOT=yes
BOOTPROTO=dhcp                # change this to static to specify an IP addr
IPADDR=192.168.0.11
GATEWAY=192.168.0.1
NETMASK=255.255.255.0
NETWORK=192.168.0.0
BROADCAST=192.168.0.255
GATEWAYDEV=wlan0              # this is for setting default route
TYPE=Ethernet
USERCTL=yes
PEERDNS=yes                   # this lets DHCP define the DNS setup
